{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php@0.8.0",
        "config": {
          "phpIni": {
            "memory_limit": "512M"
          }
        }
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/(css|js|build|images|fonts)/(.*)", "dest": "public/$1/$2" },
      { "src": "/(.*)\\.(.+)", "dest": "public/$1.$2" },
      { "src": "/(.*)", "dest": "api/index.php" }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://your-app.vercel.app"
    }
  }